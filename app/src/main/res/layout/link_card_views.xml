<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cardViewforLink"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_insert_link_24"
            android:layout_centerVertical="true"
            android:id="@+id/linkicon"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           android:orientation="vertical"
            android:layout_toRightOf="@+id/linkicon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cricbuzz"
                android:id="@+id/linkname"
                android:textColor="@android:color/black"
                android:fontFamily="@font/googlesans_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.cribuzz.com"
                android:id="@+id/linkurl"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_content_copy_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/copyurl"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_toLeftOf="@+id/copyurl"
            android:layout_marginRight="20dp"
            android:id="@+id/shareurl"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>